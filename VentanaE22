    private void calcularActionPerformed(java.awt.event.ActionEvent evt) {                                         
        double salario_hora, horas;
        String nombre;
        try{
            salario_hora = Double.parseDouble(txtsalario.getText());
            horas = Double.parseDouble(txthoras.getText());
            nombre = txtnombre.getText();
            txtrespuesta.setText(empleado1.sal_men(salario_hora, horas, nombre));
        }catch (NumberFormatException e){
           JOptionPane.showMessageDialog(null, "No se pueden usar letras, revise y vuelva a intentar.");
       }
    }                                        

    private void limpiarActionPerformed(java.awt.event.ActionEvent evt) {                                        
       txtsalario.setText("");
       txthoras.setText("");
       txtrespuesta.setText("");
       txtnombre.setText("");
    }                                       

